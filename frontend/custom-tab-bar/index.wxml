<!-- 自定义TAB栏模板 -->
<cover-view class="tab-bar" style="{{tabBarStyle}}">
  <cover-view 
    wx:for="{{list}}" 
    wx:key="index"
    class="tab-bar-item {{selected === index ? 'tab-bar-item--active' : ''}}"
    data-path="{{item.pagePath}}"
    data-index="{{index}}"
    bindtap="switchTab"
  >
    <!-- 图标容器 -->
    <cover-view class="tab-bar-icon-wrapper">
      <!-- 背景动效 -->
      <cover-view class="tab-bar-bg {{selected === index ? 'tab-bar-bg--active' : ''}}"></cover-view>
      
      <!-- 图标 -->
      <cover-view class="tab-bar-icon {{selected === index ? 'tab-bar-icon--active' : ''}}">
        <cover-view class="icon-emoji">{{item.icon}}</cover-view>
      </cover-view>
      
      <!-- 波纹动效 -->
      <cover-view class="tab-bar-ripple {{selected === index ? 'tab-bar-ripple--active' : ''}}"></cover-view>
    </cover-view>
    
    <!-- 文字 -->
    <cover-view class="tab-bar-text {{selected === index ? 'tab-bar-text--active' : ''}}">
      {{item.text}}
    </cover-view>
  </cover-view>
</cover-view>