/* components/loading-animation/loading-animation.wxss */

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  transition: all 0.3s ease;
}

.loading-container.hidden {
  opacity: 0;
  transform: scale(0.8);
}

.loading-container.visible {
  opacity: 1;
  transform: scale(1);
}

/* 尺寸变体 */
.loading-container.small {
  padding: 20rpx;
}

.loading-container.medium {
  padding: 40rpx;
}

.loading-container.large {
  padding: 60rpx;
}

/* 点状动画 */
.dots-container {
  display: flex;
  gap: 12rpx;
  align-items: center;
}

.dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  animation: bounce 1.4s ease-in-out infinite both;
}

.dots-container.small .dot {
  width: 12rpx;
  height: 12rpx;
}

.dots-container.large .dot {
  width: 20rpx;
  height: 20rpx;
}

.dot-1 { animation-delay: -0.32s; }
.dot-2 { animation-delay: -0.16s; }
.dot-3 { animation-delay: 0s; }

@keyframes bounce {
  0%, 80%, 100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1.0);
  }
}

/* 旋转动画 */
.spinner-container {
  position: relative;
}

.spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.spinner-container.small .spinner {
  width: 32rpx;
  height: 32rpx;
  border-width: 3rpx;
}

.spinner-container.large .spinner {
  width: 64rpx;
  height: 64rpx;
  border-width: 5rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 脉冲动画 */
.pulse-container {
  position: relative;
}

.pulse {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  animation: pulse 2s ease-in-out infinite;
}

.pulse-container.small .pulse {
  width: 40rpx;
  height: 40rpx;
}

.pulse-container.large .pulse {
  width: 80rpx;
  height: 80rpx;
}

@keyframes pulse {
  0% {
    transform: scale(0.8);
    opacity: 0.7;
  }
  50% {
    transform: scale(1.2);
    opacity: 1;
  }
  100% {
    transform: scale(0.8);
    opacity: 0.7;
  }
}

/* 卡片翻转动画 */
.cards-container {
  perspective: 1000rpx;
}

.card-flip {
  width: 80rpx;
  height: 80rpx;
  position: relative;
  transform-style: preserve-3d;
  animation: flip 2s ease-in-out infinite;
}

.cards-container.small .card-flip {
  width: 60rpx;
  height: 60rpx;
}

.cards-container.large .card-flip {
  width: 100rpx;
  height: 100rpx;
}

.card-front, .card-back {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  backface-visibility: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.card-back {
  transform: rotateY(180deg);
}

.card-icon {
  font-size: 40rpx;
}

.cards-container.small .card-icon {
  font-size: 30rpx;
}

.cards-container.large .card-icon {
  font-size: 50rpx;
}

@keyframes flip {
  0% { transform: rotateY(0deg); }
  50% { transform: rotateY(180deg); }
  100% { transform: rotateY(360deg); }
}

/* 加载文字 */
.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

.loading-text.small {
  font-size: 24rpx;
  margin-top: 15rpx;
}

.loading-text.large {
  font-size: 32rpx;
  margin-top: 25rpx;
}

/* 进度条 */
.progress-bar {
  width: 200rpx;
  height: 4rpx;
  background: rgba(0, 0, 0, 0.1);
  border-radius: 2rpx;
  overflow: hidden;
  margin-top: 20rpx;
}

.progress-fill {
  height: 100%;
  width: 0%;
  border-radius: 2rpx;
  animation: progress 2s ease-in-out infinite;
}

@keyframes progress {
  0% { width: 0%; }
  50% { width: 70%; }
  100% { width: 100%; }
}

/* 特殊主题动画 */
.loading-container.theme-minimal {
  --primary-color: #2c3e50;
  --secondary-color: #bdc3c7;
}

.loading-container.theme-artistic {
  --primary-color: #667eea;
  --secondary-color: #764ba2;
}

.loading-container.theme-vibrant {
  --primary-color: #fa709a;
  --secondary-color: #fee140;
}

/* 响应式适配 */
@media (prefers-reduced-motion: reduce) {
  .loading-container * {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }
}