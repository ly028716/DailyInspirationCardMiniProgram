/* 设置页面样式 - 符合UI原型 */

/* 主容器 */
.settings-container {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 顶部导航栏 */
.navbar {
  display: flex;
  align-items: center;
  height: 88rpx;
  background: white;
  padding: 0 30rpx;
  position: relative;
}

.nav-left {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 36rpx;
  color: #333333;
  font-weight: bold;
}

.nav-title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  font-size: 36rpx;
  color: #333333;
  font-weight: bold;
}

.nav-right {
  width: 60rpx;
}

/* 设置区块 */
.settings-section {
  background: white;
  margin-bottom: 20rpx;
}

/* 主题选择特殊样式 */
.section-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
}

.section-title {
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
}

.theme-options {
  display: flex;
  padding: 30rpx;
  gap: 20rpx;
}

.theme-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f0f0f0;
  color: #666666;
  font-size: 28rpx;
  transition: all 0.3s ease;
}

.theme-btn.active {
  background: #FF8C42;
  color: white;
}

/* 区块标题 */
.section-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-header .section-title {
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
}

/* 设置项 */
.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background 0.2s ease;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-item:active {
  background: #f8f8f8;
}

.item-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.item-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
}

.item-title {
  font-size: 32rpx;
  color: #333333;
}

.item-right {
  display: flex;
  align-items: center;
}

.item-value {
  font-size: 28rpx;
  color: #999999;
}

/* 开关样式调整 */
switch {
  transform: scale(0.8);
}

/* 底部导航栏 */
.tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  background: white;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-top: 1rpx solid #f0f0f0;
}

.tab-item {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 100%;
}

.tab-icon {
  font-size: 48rpx;
  color: #999999;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .theme-options {
    flex-direction: column;
    gap: 15rpx;
  }
  
  .theme-btn {
    width: 100%;
  }
}