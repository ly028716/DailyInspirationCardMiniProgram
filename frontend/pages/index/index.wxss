/* 首页样式 - 匹配UI原型 */

/* 主容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #FFD194 0%, #FF8C42 100%);
  padding: 0;
  position: relative;
}

/* 顶部导航栏 */
.navbar {
  height: 88rpx;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 60rpx;
}

.nav-icon {
  font-size: 36rpx;
  color: white;
  display: none;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
  gap: 40rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  border-top: 6rpx solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  color: white;
  font-size: 28rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 卡片容器 */
.card-container {
  margin: 160rpx 40rpx 80rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 32rpx;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.1);
  padding: 60rpx 40rpx;
  text-align: center;
}

.card-header {
  margin-bottom: 60rpx;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.card-content {
  margin-bottom: 80rpx;
}

.card-text {
  font-size: 48rpx;
  line-height: 1.6;
  color: #333333;
  font-style: italic;
  display: block;
  margin-bottom: 40rpx;
}

.card-author {
  font-size: 28rpx;
  color: #999999;
  display: block;
}

/* 互动按钮 */
.card-actions {
  display: flex;
  justify-content: center;
  gap: 150rpx;
}

.action-btn {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #FF8C42;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.9);
}

.action-icon {
  font-size: 40rpx;
  color: white;
}

.like-btn.liked {
  background: #ff4757;
}

/* 换一张按钮 */
.refresh-section {
  padding: 0 175rpx;
  margin-bottom: 100rpx;
}

.refresh-btn {
  width: 100%;
  height: 100rpx;
  background: white;
  border-radius: 50rpx;
  border: none;
  font-size: 32rpx;
  color: #FF8C42;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.refresh-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.refresh-btn:disabled {
  opacity: 0.6;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 60rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
  animation: bounce 2s ease-in-out infinite;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 20rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 60rpx;
}

.empty-btn {
  padding: 24rpx 48rpx;
  background: white;
  color: #FF8C42;
  border-radius: 50rpx;
  font-size: 30rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  border: none;
}

.empty-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 底部导航栏 */
.tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  background: white;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-top: 1rpx solid #f0f0f0;
}

.tab-item {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 100%;
}

.tab-icon {
  font-size: 48rpx;
  color: #999999;
  transition: all 0.3s ease;
}

.tab-item.active .tab-icon {
  color: #FF8C42;
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-20rpx);
  }
  60% {
    transform: translateY(-10rpx);
  }
}