/* 自定义分享面板样式 */

.share-panel-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  z-index: 999;
  display: flex;
  align-items: flex-end;
  animation: fadeIn 0.3s ease;
}

.share-panel {
  width: 100%;
  background: #f8f8f8;
  border-top-left-radius: 32rpx;
  border-top-right-radius: 32rpx;
  padding: 40rpx;
  box-sizing: border-box;
  animation: slideUp 0.3s ease;
}

.share-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  text-align: center;
  margin-bottom: 40rpx;
}

.share-options {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
}

.share-option {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  background: none;
  border: none;
  padding: 0;
  margin: 0;
  line-height: 1.2;
}

.share-icon-wrapper {
  width: 120rpx;
  height: 120rpx;
  background: white;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.share-icon {
  width: 60rpx;
  height: 60rpx;
}

.share-emoji {
  font-size: 60rpx;
  line-height: 1;
}

.share-text {
  font-size: 24rpx;
  color: #666;
}

.cancel-btn {
  width: 100%;
  height: 96rpx;
  background: white;
  border-radius: 24rpx;
  font-size: 32rpx;
  color: #333;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}