/* 历史记录页面样式 */
.container {
  height: 100vh;
  background-color: #f5f5f5;
}

/* 搜索栏 */
.search-bar {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #e0e0e0;
}

.search-input {
  flex: 1;
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 30rpx;
  padding: 0 20rpx;
  margin-right: 20rpx;
}

.icon-search {
  margin-right: 10rpx;
  font-size: 28rpx;
}

.search-input input {
  flex: 1;
  height: 60rpx;
  font-size: 28rpx;
}

.filter-btn {
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  color: #FF8C42;
  background: transparent;
  border: 1rpx solid #FF8C42;
  border-radius: 20rpx;
}

/* 筛选标签 */
.filter-tags {
  display: flex;
  padding: 20rpx 30rpx;
  background: #fff;
  flex-wrap: wrap;
}

.tag {
  padding: 10rpx 20rpx;
  margin: 0 10rpx 10rpx 0;
  background: #f5f5f5;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666;
}

.tag.active {
  background: #FF8C42;
  color: #fff;
}

/* 卡片列表 */
.card-list {
  flex: 1;
  padding: 20rpx;
}

.card-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.card-date {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.card-content {
  position: relative;
}

.card-type {
  display: inline-block;
  padding: 4rpx 12rpx;
  background: #f0f0f0;
  border-radius: 12rpx;
  font-size: 20rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.card-text {
  display: block;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.card-stats {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  font-size: 24rpx;
  color: #999;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
  color: #999;
}

.icon-empty {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .container {
    background-color: #1a1a1a;
  }
  
  .search-bar,
  .card-item {
    background: #2c2c2c;
    border-color: #404040;
  }
  
  .search-input {
    background: #404040;
  }
  
  .card-text {
    color: #fff;
  }
}