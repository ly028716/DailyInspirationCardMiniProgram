/* 个人中心页面样式 - 匹配UI原型 */

/* 主容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #FFD194 0%, #FF8C42 100%);
  padding-bottom: 88rpx; /* 为底部导航栏留出空间 */
}

/* 用户信息区域 */
.user-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 40rpx 80rpx;
  text-align: center;
}

.avatar-container {
  margin-bottom: 40rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 6rpx solid white;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.default-avatar {
  background: rgba(255, 255, 255, 0.9);
}

.avatar-emoji {
  font-size: 80rpx;
  color: #FF8C42;
}

.username {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
}

.user-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 40rpx;
}

.login-btn {
  padding: 24rpx 60rpx;
  background: white;
  color: #FF8C42;
  border-radius: 50rpx;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  border: none;
}

.login-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 统计数据 */
.stats-section {
  display: flex;
  justify-content: space-around;
  background: white;
  margin: 0 40rpx;
  border-radius: 32rpx;
  padding: 60rpx 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 60rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #FF8C42;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666666;
}

/* 功能菜单 */
.menu-section {
  background: white;
  margin: 0 40rpx;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: #f8f8f8;
}

.menu-icon {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 30rpx;
}

.menu-title {
  flex: 1;
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
}

.menu-arrow {
  font-size: 32rpx;
  color: #cccccc;
}

/* 版本信息 */
.footer {
  text-align: center;
  padding: 60rpx 0 40rpx;
}

.version {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* 底部导航栏 */
.tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  background: white;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-top: 1rpx solid #f0f0f0;
}

.tab-item {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 100%;
}

.tab-icon {
  font-size: 48rpx;
  color: #999999;
  transition: all 0.3s ease;
}

.tab-item.active .tab-icon {
  color: #FF8C42;
}