  <text x="275" y="428" font-family="Arial" font-size="20" fill="white" text-anchor="middle">👍</text>
  
  <!-- 换一张按钮 -->
  <rect x="87.5" y="500" width="200" height="50" rx="25" ry="25" fill="white" style="filter: drop-shadow(0px 4px 8px rgba(0,0,0,0.1));"/>
  <text x="187.5" y="530" font-family="Arial" font-size="16" fill="#FF8C42" text-anchor="middle">换一张灵感卡片</text>
  
  <!-- 底部导航栏 -->
  <rect x="0" y="623" width="375" height="44" fill="white"/>
  <text x="62.5" y="647" font-family="Arial" font-size="24" fill="#FF8C42" text-anchor="middle">🏠</text>
  <text x="187.5" y="647" font-family="Arial" font-size="24" fill="#999999" text-anchor="middle">📜</text>
